---
import Card from '@/components/Card.astro'
import Layout from '@/layouts/Layout.astro'
import { leagues } from '@/utils/data/leagues'
import '@/styles/globals.css'
---

<Layout title='welcome to pitch'>
  <main class='h-dvh grid place-items-center gap-2'>
    <div class='container mx-auto max-w-4xl space-y-2 px-6'>
      <h1
        class='mb-4 text-3xl font-extrabold text-gray-900 dark:text-white md:text-5xl lg:text-6xl'
      >
        <span
          class='text-transparent bg-clip-text bg-gradient-to-r to-emerald-600 from-sky-400'
          >PitchData</span
        > soccer insights in every kick.
      </h1>
      <p
        class='pb-6 text-lg font-normal text-gray-500 lg:text-xl dark:text-gray-400'
      >
        Choose below your league and enjoy the data.
      </p>
      <div class='grid md:grid-cols-3 gap-6'>
        {
          leagues.map((league) => (
            <Card
              href={'league/' + league.slug}
              title={league.name}
              srcImage={league.logo}
            />
          ))
        }
      </div>
    </div>
  </main>
</Layout>

---
interface Props {
  title: string
  src?: string
}

const { title, src } = Astro.props
---

<article
  class='w-[350px] rounded-xl bg-zinc-100 dark:bg-accent-dark px-6 py-4 space-y-4'
>
  <h4 class='text-md md:text-xl font-bold'>{title}</h4>

  <div class='flex gap-x-4 gap-y-2'>
    <img src={src} alt={title} class='w-20 h-20 flex-shrink-0' />
    <div class='flex-1 flex flex-col'>
      <span class='text-lg font-bold leading-6'>Earling Haaland</span>
      <span class='text-md font-semibold'>ST</span>
      <span>Manchester City</span>
      <span class='self-end text-5xl font-bold'>14</span>
    </div>
  </div>
</article>
